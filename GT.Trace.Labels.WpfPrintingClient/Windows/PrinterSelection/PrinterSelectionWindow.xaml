<Window x:Class="GT.Trace.Labels.WpfPrintingClient.Windows.PrinterSelection.PrinterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GT.Trace.Labels.WpfPrintingClient.Windows.PrinterSelection"
        mc:Ignorable="d"
        Title="Selección de Impresora" Height="342" Width="364" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top"  Margin="5">Seleccione una impresora:</TextBlock>
        <DockPanel DockPanel.Dock="Bottom">
            <Button Padding="5,3,5,3" DockPanel.Dock="Right" Margin="5" Click="HandleAcceptButtonClick">Aceptar</Button>
            <Button Padding="5,3,5,3" DockPanel.Dock="Left" Margin="5" Click="HandleCancelButtonClick">Cancelar</Button>
            <TextBlock />
        </DockPanel>
        <Border Background="Gray" Height="1" DockPanel.Dock="Bottom" Margin="5,0,5,0" />
        <ListBox Margin="5" ItemsSource="{Binding Path=Printers}" MouseDoubleClick="HandlePrintersListMouseDoubleClick" SelectedIndex="{Binding Path=SelectedPrinterIndex, Mode=TwoWay}" />
    </DockPanel>
</Window>