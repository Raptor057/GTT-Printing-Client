<Window x:Class="GT.Trace.Labels.WpfPrintingClient.PrinterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GT.Trace.Labels.WpfPrintingClient"
        mc:Ignorable="d"
        Title="Seleccionar Impresora" Height="450" Width="800" Loaded="Window_Loaded" ResizeMode="NoResize">
    <DockPanel>
        <Label x:Name="StatusLabel" DockPanel.Dock="Bottom">STATUS</Label>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button x:Name="CancelButton" Click="CancelButton_Click">Cancelar</Button>
            <Button x:Name="SelectButton" HorizontalAlignment="Right" Click="SelectButton_Click">Seleccionar</Button>
        </StackPanel>
        <ListBox x:Name="InstalledPrintersListBox" SelectionChanged="InstalledPrintersListBox_SelectionChanged" MouseDoubleClick="InstalledPrintersListBox_MouseDoubleClick" />
    </DockPanel>
</Window>